        <ProgressRing Width="56" Height="56" x:Name="webview_progressBar" Grid.RowSpan="2"  IsActive="True" Visibility="Collapsed"></ProgressRing>
        <StackPanel Margin="12" Grid.RowSpan="2" VerticalAlignment="Bottom" Orientation="Horizontal">
            <AppBarButton x:Name="btn_WebBack" Click="btn_WebBack_Click" Icon="Back"  Foreground="White" Width="48" Height="48" Background="#19000000"></AppBarButton>
            <AppBarButton x:Name="btn_WebRefresh" Click="btn_WebRefresh_Click" Icon="Refresh"  Foreground="White" Width="48" Height="48" Background="#19000000"></AppBarButton>
