<Page
    x:Class="BiliBili.UWP.Views.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BiliBili.UWP.Views"
    xmlns:my="using:BiliBili.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Tag="设置"
    >
    <Page.Resources>
        <x:Double x:Key="ToggleSwitchThemeMinWidth">30</x:Double>
        
    </Page.Resources>

    <Grid Background="{ThemeResource Bili-Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="grid_Top" Background="{ThemeResource Bili-ForeColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <AppBarButton x:Name="btn_Back" Click="btn_Back_Click" Foreground="White" Width="48" Icon="Back" Height="48"  ></AppBarButton>
            <TextBlock x:Name="txt_Header" TextTrimming="CharacterEllipsis"  Grid.Column="1" Margin="5 0" VerticalAlignment="Center" Foreground="White">设置</TextBlock>
           
            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <Button x:Name="btn_Feedback" Click="btn_Feedback_Click"  Background="#00000000" BorderBrush="White" Foreground="White" Margin="4 0">反馈</Button>
                <Button x:Name="btn_Help" Click="btn_Help_Click"  Background="#00000000" BorderBrush="White" Foreground="White" Margin="4 0">帮助</Button>
            </StackPanel>
        </Grid>
        <Pivot Grid.Row="1">
            <PivotItem Margin="0">
                <PivotItem.Header>
                    <TextBlock FontSize="16">常规/外观</TextBlock>
                </PivotItem.Header>
                <ScrollViewer  VerticalScrollBarVisibility="Auto" FontFamily="Segoe UI">
                    <StackPanel Margin="10">
                        <StackPanel Margin="0 0 0 10">
                            <TextBlock FontSize="16">外观</TextBlock>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">主题颜色</TextBlock>
                                <ComboBox  x:Name="cb_Theme"  Margin="2 0" HorizontalAlignment="Right" SelectionChanged="cb_Theme_SelectionChanged" Grid.Column="0"  Foreground="White" VerticalAlignment="Center" Background="#00424959"  BorderThickness="0" >
                                    <ComboBoxItem >
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="#FFDF85A0" Margin="0,0,5,0"/>
                                            <TextBlock Foreground="#FFDF85A0">
												<Run Text="少女粉"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem >
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="#FF494949" Margin="0,0,5,0"/>
                                            <TextBlock Foreground="#FF494949">
												<Run Text="夜间黑"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem >
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="#FFF70D0D" Margin="0,0,5,0"/>
                                            <TextBlock Foreground="#FFF70D0D">
												<Run Text="姨妈红"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="#FFF9EF23" Margin="0,0,5,0"/>
                                            <TextBlock Foreground="#FFF9EF23">
												<Run Text="咸蛋黄"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem >
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="#FF71F923" Margin="0,0,5,0"/>
                                            <TextBlock Foreground="#FF71F923">
												<Run Text="早苗绿"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem >
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="#FF18BDFB" Margin="0,0,5,0"/>
                                            <TextBlock Foreground="#FF18BDFB">
												<Run Text="胖次蓝"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="#FFB92CBF" Margin="0,0,5,0"/>
                                            <TextBlock Foreground="#FFB92CBF">
												<Run Text="基佬紫"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="#FF9D91CA" Margin="0,0,5,0"/>
                                            <TextBlock Foreground="#FF9D91CA">
												<Run Text="EMT紫"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </ComboBoxItem>
                                </ComboBox>
                               
                            </Grid>
                            <Grid Margin="0 10 0 0" x:Name="CustomBg">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">自定义背景图</TextBlock>
                                <ToggleSwitch  x:Name="sw_CustomBg" Toggled="sw_CustomBg_Toggled" HorizontalAlignment="Right"  Margin="10 0"  Width="68"></ToggleSwitch>
                            

                            </Grid>
                            
                            <Grid x:Name="grid_CustomBg" Visibility="Visible">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  VerticalAlignment="Center" x:Name="txt_BGPath"></TextBlock>
                                <HyperlinkButton x:Name="btn_BgPath" HorizontalAlignment="Right" Margin="0 0 10 0" Click="btn_ChanageBg_Click">更改</HyperlinkButton>


                            </Grid>
                            <Grid x:Name="grid_Stretch" Visibility="Visible">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  VerticalAlignment="Center" Foreground="Gray">图片缩放方式</TextBlock>
                                <ComboBox x:Name="cb_BGStretch" SelectionChanged="cb_BGStretch_SelectionChanged" Margin="2 0" HorizontalAlignment="Right" Grid.Column="0"   VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem>无(None)</ComboBoxItem>
                                    <ComboBoxItem>填充(Fill)</ComboBoxItem>
                                    <ComboBoxItem>均匀(Uniform)</ComboBoxItem>
                                    <ComboBoxItem>均匀填充(UniformToFill)</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid x:Name="grid_Hor" Visibility="Visible">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  VerticalAlignment="Center" Foreground="Gray">水平对齐方式</TextBlock>
                                <ComboBox  x:Name="cbHor" SelectionChanged="cbHor_SelectionChanged"  Margin="2 0" HorizontalAlignment="Right" Grid.Column="0"   VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem>居左</ComboBoxItem>
                                    <ComboBoxItem>居中</ComboBoxItem>
                                    <ComboBoxItem>居右</ComboBoxItem>
                                    <ComboBoxItem>拉伸</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid x:Name="grid_Ver" Visibility="Visible">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  VerticalAlignment="Center" Foreground="Gray">垂直对齐方式</TextBlock>
                                <ComboBox x:Name="cb_Ver" SelectionChanged="cb_Ver_SelectionChanged" Margin="2 0" HorizontalAlignment="Right" Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem>居上</ComboBoxItem>
                                    <ComboBoxItem>居中</ComboBoxItem>
                                    <ComboBoxItem>居下</ComboBoxItem>
                                    <ComboBoxItem>拉伸</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid x:Name="grid_Opacity" Visibility="Visible" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  VerticalAlignment="Center" Foreground="Gray">背景透明度</TextBlock>
                                <ComboBox x:Name="cb_BGOpacity" SelectionChanged="cb_BGOpacity_SelectionChanged" Margin="2 0" HorizontalAlignment="Right" Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem>10%</ComboBoxItem>
                                    <ComboBoxItem>20%</ComboBoxItem>
                                    <ComboBoxItem>30%</ComboBoxItem>
                                    <ComboBoxItem>40%</ComboBoxItem>
                                    <ComboBoxItem>50%</ComboBoxItem>
                                    <ComboBoxItem>60%</ComboBoxItem>
                                    <ComboBoxItem>70%</ComboBoxItem>
                                    <ComboBoxItem>80%</ComboBoxItem>
                                    <ComboBoxItem>90%</ComboBoxItem>
                                    <ComboBoxItem>100%</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid x:Name="grid_FrostedGlass" Visibility="Visible" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  VerticalAlignment="Center" Foreground="Gray">背景高斯模糊(0为不模糊)</TextBlock>
                                <ComboBox x:Name="cb_FrostedGlass" SelectionChanged="cb_FrostedGlass_SelectionChanged" Margin="2 0" HorizontalAlignment="Right" Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem>0</ComboBoxItem>
                                    <ComboBoxItem>1</ComboBoxItem>
                                    <ComboBoxItem>2</ComboBoxItem>
                                    <ComboBoxItem>3</ComboBoxItem>
                                    <ComboBoxItem>4</ComboBoxItem>
                                    <ComboBoxItem>5</ComboBoxItem>
                                    <ComboBoxItem>6</ComboBoxItem>
                                    <ComboBoxItem>7</ComboBoxItem>
                                    <ComboBoxItem>8</ComboBoxItem>
                                    <ComboBoxItem>9</ComboBoxItem>
                                    <ComboBoxItem>10</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid x:Name="grid_BgWdith" Visibility="Visible" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  VerticalAlignment="Center" Foreground="Gray">背景最大宽度(0为不设置)</TextBlock>
                                <TextBox x:Name="txt_BGMaxWidth" TextChanged="txt_BGMaxWidth_TextChanged" HorizontalAlignment="Right" Margin="0 0 10 0" BorderThickness="1" Text="0" TextAlignment="Center"></TextBox>
                            </Grid>
                            <Grid x:Name="grid_BgHeigth" Visibility="Visible">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  VerticalAlignment="Center" Foreground="Gray">背景最大高度(0为不设置)</TextBlock>
                                <TextBox  x:Name="txt_BGMaxHeight" TextChanged="txt_BGMaxHeight_TextChanged" HorizontalAlignment="Right" Margin="0 0 10 0" BorderThickness="1" Text="0" TextAlignment="Center"></TextBox>
                            </Grid>
                            <TextBlock FontSize="16"  Margin="0 10">常规</TextBlock>

                            <Button Foreground="White" x:Name="btn_Clear" Click="btn_Clear_Click" Background="{ThemeResource Bili-ForeColor}">清除缓存</Button>
                            <Grid >
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">首页默认分栏显示</TextBlock>
                                <ToggleSwitch x:Name="sw_ColunmHome" Toggled="sw_ColunmHome_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>
                            </Grid>
                            <Grid Margin="0 10 0 0" >
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">PC右侧显示(重启生效)</TextBlock>
                                <ComboBox  x:Name="cb_Rigth" SelectionChanged="cb_Rigth_SelectionChanged" Margin="2 0" HorizontalAlignment="Right"  Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem >空白页</ComboBoxItem>
                                    <ComboBoxItem >快速导航</ComboBoxItem>
                                    <ComboBoxItem >分区</ComboBoxItem>
                                    <ComboBoxItem >排行榜</ComboBoxItem>
                                    <ComboBoxItem >番剧放送表</ComboBoxItem>
                                    <ComboBoxItem >推荐直播</ComboBoxItem>
                                </ComboBox>

                            </Grid>
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">首页使用新版首页推荐(重启生效)</TextBlock>
                                <ToggleSwitch x:Name="sw_NewFeed" Toggled="sw_NewFeed_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>
                            </Grid>
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">播放页面直接播放视频(测试)</TextBlock>
                                <ToggleSwitch x:Name="sw_PlayPage"  HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">PC页面显示刷新按钮(重载页面生效)</TextBlock>
                                <ToggleSwitch  x:Name="sw_RefreshButton" Toggled="sw_RefreshButton_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                         
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">手机横屏隐藏状态栏</TextBlock>
                                <ToggleSwitch x:Name="sw_HideStatus" Toggled="sw_HideStatus_Toggled"  HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">加载启动首屏壁纸/广告</TextBlock>
                                <ToggleSwitch x:Name="sw_LoadSe" Toggled="sw_LoadSe_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                           
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">关闭应用全部广告(重启生效)</TextBlock>
                                <ToggleSwitch  x:Name="sw_CloseAD" Toggled="sw_CloseAD_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">鼠标侧键及中键返回</TextBlock>
                                <ToggleSwitch  x:Name="sw_MouseBack" Toggled="sw_MouseBack_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <PivotItem Margin="0" >
                <PivotItem.Header>
                    <TextBlock FontSize="16">视频/直播</TextBlock>
                </PivotItem.Header>
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <StackPanel Margin="0 0 0 10">
                            <TextBlock FontSize="16">视频</TextBlock>
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">默认清晰度</TextBlock>
                                <ComboBox x:Name="cb_PlayQuality" SelectionChanged="cb_PlayQuality_SelectionChanged" Margin="2 0" HorizontalAlignment="Right"  Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem Content="流畅"/>
                                    <ComboBoxItem Content="清晰"/>
                                    <ComboBoxItem Content="高清"/>
                                    <ComboBoxItem Content="超清"/>
                                </ComboBox>

                            </Grid>
                            <Grid Margin="0 10 0 0"  Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center" >默认格式</TextBlock>
                                <ComboBox  x:Name="cb_VideoType" IsEnabled="False" SelectionChanged="cb_VideoType_SelectionChanged"  Margin="2 0" HorizontalAlignment="Right"  Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem Content="MP4"/>
                                    <ComboBoxItem Content="FLV"/>
                                </ComboBox>

                            </Grid>
                         
                            <!--<TextBlock Foreground="Gray" FontSize="14" TextWrapping="Wrap" Visibility="Collapsed">*如果格式选择FLV,播放器一些功能将不受支持，如后台播放、倍速播放等</TextBlock>
                            <TextBlock Foreground="Gray" FontSize="14" TextWrapping="Wrap" IsTextSelectionEnabled="True" Visibility="Visible">*此版本无法使用FLV，请到https://nsapp.win下载</TextBlock>-->
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">使用FFmpegInterop软解</TextBlock>
                                <ToggleSwitch x:Name="sw_FFmpeg" Toggled="sw_FFmpeg_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">强制软解音频</TextBlock>
                                <ToggleSwitch x:Name="sw_ForceAudio" Toggled="sw_ForceAudio_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0" Visibility="Visible">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">启用DASH播放(测试中,播放有问题请关闭)</TextBlock>
                                <ToggleSwitch x:Name="sw_UseDASH"  Toggled="Sw_UseDASH_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0" Visibility="Visible">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left">DASH使用HEVC(如果出现无画面请关闭)</TextBlock>
                                <ToggleSwitch x:Name="sw_DASHUseHEVC"  Toggled="Sw_DASHUseHEVC_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <HyperlinkButton x:Name="btnOpenInstallHEVC" NavigateUri="ms-windows-store://pdp/?productid=9n4wgh0z6vhq">需要安装扩展才能开启HEVC</HyperlinkButton>
                            <Grid Margin="0 10 0 0" Visibility="Visible">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">强制软解视频</TextBlock>
                                <ToggleSwitch x:Name="sw_ForceVideo"  Toggled="sw_ForceVideo_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">默认播放倍速</TextBlock>
                                <ComboBox x:Name="sw_Playback" SelectionChanged="sw_Playback_SelectionChanged" Margin="2 0" HorizontalAlignment="Right"  Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBox.Items>
                                        <ComboBoxItem Content="1.0"/>
                                        <ComboBoxItem Content="0.5"/>
                                        <ComboBoxItem Content="1.5"/>
                                        <ComboBoxItem Content="2.0"/>
                                    </ComboBox.Items>
                                </ComboBox>

                            </Grid>
                          
                            <TextBlock FontSize="16" Margin="0 10 0 0">播放选项</TextBlock>
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">播放自动全屏</TextBlock>
                              

                            </Grid>
                           
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">番剧使用播放器</TextBlock>

                                <ComboBox x:Name="cb_BanPlayer" SelectionChanged="cb_BanPlayer_SelectionChanged" Margin="2 0" HorizontalAlignment="Right"  Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem Content="原生"/>
                                    <ComboBoxItem Content="HTML5"/>
                                    <ComboBoxItem Content="询问"/>
                                    
                                </ComboBox>
                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">自动跳转历史进度</TextBlock>
                                <ToggleSwitch x:Name="sw_SkipToHistory" Toggled="sw_SkipToHistory_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>
                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">启用后台播放(重启生效)</TextBlock>
                                <ToggleSwitch x:Name="sw_BackgroundPlay" Toggled="sw_BackgroundPlay_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">流量播放提醒</TextBlock>
                                <ToggleSwitch x:Name="sw_Play4G" Toggled="sw_Play4G_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">强制横屏播放</TextBlock>
                                <ToggleSwitch x:Name="sw_QZHP" Toggled="sw_QZHP_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">自动全屏播放</TextBlock>
                                <ComboBox x:Name="sw_AutoFull" SelectionChanged="sw_AutoFull_SelectionChanged" Margin="2 0" HorizontalAlignment="Right"  Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem Content="自动"/>
                                    <ComboBoxItem Content="关"/>
                                    <ComboBoxItem Content="开"/>
                                </ComboBox>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">播放自动隐藏鼠标指针</TextBlock>
                                <ToggleSwitch x:Name="sw_HideCursor" Toggled="sw_HideCursor_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <Grid Margin="0 10 0 0">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">使用新窗口播放(仅PC)</TextBlock>
                                <ToggleSwitch x:Name="sw_NewWidnows" Toggled="sw_NewWidnows_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                            <TextBlock FontSize="16" Margin="0 10 0 0" Visibility="Collapsed">直播</TextBlock>
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">互动区到达数量自动清除</TextBlock>
                                <ComboBox x:Name="cb_ClaerLiveComment" SelectionChanged="cb_ClaerLiveComment_SelectionChanged" Margin="2 0" HorizontalAlignment="Right"  Grid.Column="0"  VerticalAlignment="Center" Background="#00424959"  BorderThickness="0"  >
                                    <ComboBoxItem Content="无限制"/>
                                    <ComboBoxItem Content="100"/>
                                    <ComboBoxItem Content="200"/>
                                    <ComboBoxItem Content="300"/>
                                    <ComboBoxItem Content="400"/>
                                    <ComboBoxItem Content="500"/>
                                    <ComboBoxItem Content="600"/>
                                    <ComboBoxItem Content="700"/>
                                    <ComboBoxItem Content="800"/>
                                    <ComboBoxItem Content="900"/>
                                    <ComboBoxItem Content="1000"/>
                                </ComboBox>
                            </Grid>
                            <Grid Margin="0 10 0 0" Visibility="Collapsed">
                                <TextBlock Foreground="Gray" VerticalAlignment="Center">默认使用H5源</TextBlock>
                                <ToggleSwitch x:Name="sw_H5" Toggled="sw_H5_Toggled" HorizontalAlignment="Right"  Margin="10 0" Width="68"></ToggleSwitch>

                            </Grid>
                          
                         
                           
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <PivotItem Margin="0">
                <PivotItem.Header>
                    <TextBlock FontSize="16">弹幕</TextBlock>
                </PivotItem.Header>
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <StackPanel Margin="0 0 0 10">
                            <TextBlock FontSize="16" Margin="0 10 0 0">弹幕屏蔽</TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <HyperlinkButton Padding="0 10" x:Name="btn_GoManage" Click="btn_GoManage_Click">进入管理</HyperlinkButton>
                              
                            </StackPanel>
